{
  "name": "survivorquest-monorepo",
  "private": true,
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "mobile": "pnpm --filter ./apps/mobile start",
    "admin": "pnpm --filter ./apps/admin dev",
    "backend": "pnpm --filter ./apps/backend start",
